%template
  .row
    .col-md-10.col-md-offset-1
      .pull-right
        %button.btn.btn-primary{'click.delegate': 'hint()'} Hint
        %button.btn.btn-danger{'click.delegate': 'quit()'} Quit

  .row
    .col-md-10.col-md-offset-1
      %img{'src.bind': 'picture.path', 'click.delegate': 'clicked($event)', 'style': 'width: 100%;'}

  #quitDialog.modal{role: "dialog"}
    .modal-dialog
      .modal-content
        .modal-header
          %h4.modal-title Game Over
        .modal-body
          Thanks for playing!
        .modal-footer
          .small
            You will have to close the window to exit.
  #hintDialog.modal{role: 'dialog'}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{ 'data-dismiss':"modal" } &times;
          %h4.modal-title Your hint
        .modal-body.text-center
          %template{ 'if.bind': 'hintType === 0'}
            %img{'src.bind': 'picture.hintPath'}
            -# picture hint
          %template{ 'if.bind': 'hintType === 1'}
            -# word hint
            Follow the arrows to find Waldo.
        .modal-footer
          %button.btn.btn-primary{'click.delegate': 'closeHint()'} Close
  #winDialog.modal{ role: 'dialog' }
    .modal-dialog
      .modal-content
        .modal-header
          %h4.modal-title Congratulations!
        .modal-body
          %p You found Waldo! Thanks for taking the time to participate.
          %p{ 'text.bind': 'time_taken_string()'}
        .modal-footer
          You may now close the window, or refresh to play again.
